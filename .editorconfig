# EditorConfig helps maintain consistent coding styles
# across various editors and IDEs

root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = 2

[*.json]
indent_size = 4

[*.py]
charset = utf-8
indent_style = space
indent_size = 4
max_line_length = 88
