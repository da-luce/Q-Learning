<robot name="robot">
  <!-- Connecting Bar -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.5" rpy="0 1.5707963267948966 0" />
      <geometry>
        <cylinder radius="0.05" length="1" />
      </geometry>
      <material name="base_link-material">
        <color rgba="0.6172065624120635 0.19461783043107173 0.21952619971859377 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.5" rpy="0 1.5707963267948966 0" />
      <geometry>
        <cylinder radius="0.05" length="1" />
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.5" rpy="0 1.5707963267948966 0" />
      <mass value="1" />
      <inertia ixx="0.3333333333333333" ixy="0" ixz="0" iyy="0.5" iyz="0" izz="0.3333333333333333" />
    </inertial>
  </link>

  <!-- Front Wheel -->
  <link name="front_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.3" length="0.05" />
      </geometry>
      <material name="front_wheel-material">
        <color rgba="0.0009105809505882353 0.02955683443236377 0.775822218312646 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.3" length="0.05" />
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="0.3333333333333333" ixy="0" ixz="0" iyy="0.5" iyz="0" izz="0.3333333333333333" />
    </inertial>
  </link>

  <!-- Joint: Bar to Front Wheel (Rotating with Limits) -->
  <joint name="base_link_to_front_wheel" type="continuous">
    <parent link="base_link" />
    <child link="front_wheel" />
    <origin xyz="0.5 0 0.5000000000000001" rpy="1.5707963267948963 0 1.570092458683775e-16" />
    <axis xyz="0 1 0"/> <!-- Rotate around Y axis -->

    <!-- Joint Limits for Rotation (Â±45 degrees) -->
    <limit>
      <lower>-0.785398</lower> <!-- -45 degrees in radians -->
      <upper>0.785398</upper>  <!-- +45 degrees in radians -->
      <effort>10.0</effort>
      <velocity>1.0</velocity>
    </limit>
  </joint>

  <!-- Rear Wheel (Static) -->
  <link name="back_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.3" length="0.05" />
      </geometry>
      <material name="back_wheel-material">
        <color rgba="0.0009105809505882353 0.02955683443236377 0.775822218312646 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.3" length="0.05" />
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="0.3333333333333333" ixy="0" ixz="0" iyy="0.5" iyz="0" izz="0.3333333333333333" />
    </inertial>
  </link>

  <!-- Joint: Bar to Rear Wheel (Fixed) -->
  <joint name="base_link_to_back_wheel" type="fixed">
    <parent link="base_link" />
    <child link="back_wheel" />
    <origin xyz="-0.5 0 0.4999999999999999" rpy="1.5707963267948963 0 1.570092458683775e-16" />
  </joint>

</robot>
